{
  "build": {
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "Lofi Player",
  "version": "0.2.0",
  "identifier": "com.lofi-player.app",
  "plugins": {},
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "Lofi Player",
        "width": 350,
        "height": 400,
        "decorations": false,
        "transparent": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  }
}
